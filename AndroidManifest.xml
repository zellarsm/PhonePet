<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phonepet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.phonepet.StartupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.phonepet.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.phonepet.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="com.example.phonepet.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.example.phonepet.AccessorizeActivity"
            android:label="@string/title_activity_accessorize" >
        </activity>
        <activity
            android:name="com.example.phonepet.RunawayActivity"
            android:label="@string/title_activity_runaway" >
        </activity>
        <activity android:name="com.example.connect4.Connect4Activity" >
        </activity>
        <activity
            android:name="com.example.phonepet.CleanActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_clean"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
