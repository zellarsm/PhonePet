<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <RelativeLayout
        android:id="@+id/StatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        
        <TextView
            android:id="@+id/HappinessText"
            android:text="@string/happiness_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        
        <TextView
            android:id="@+id/HappinessValue"
            android:text="100%  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/HappinessText"
         />
        
        <TextView
            android:id="@+id/HungerText"
            android:text="@string/hunger_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/HappinessValue"
         />
        
        <TextView
            android:id="@+id/HungerValue"
            android:text="100%  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/HungerText"
         />
