    <com.example.views.HomeView
	    android:id="@+id/HomeView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        
    <ImageButton
        android:id="@+id/Accessorize"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:src="@drawable/tshirt"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:contentDescription="@string/shirt_button"
    />
    
    <ImageButton
        android:id="@+id/Feed"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/Accessorize"
    	android:src="@drawable/taco"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:contentDescription="@string/food_button"
    />
    
    <ImageButton
        android:id="@+id/Play"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/Feed"
    	android:src="@drawable/mikesoccerball"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:contentDescription="@string/play_button"
    	
    />
    
    <ImageButton
        android:id="@+id/Poop"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/Play"
    	android:src="@drawable/pooper_scooper"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:contentDescription="@string/poop_button"
    />
    
    <ImageButton
        android:id="@+id/Sponge"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/Poop"
    	android:src="@drawable/sponge"
    	android:layout_marginLeft="2dp"
    	android:layout_marginRight="2dp"
    	android:contentDescription="@string/sponge_button"
    />
    
